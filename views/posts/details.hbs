<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <img src="/images/uploads/{{img}}" alt="post image" class="img img-responsive img-thumbnail center-block" >
                <div class="header" >
                    <h2>{{title}}</h2>
                </div>

                <p class="content">
                    {{content}}
                </p>

                <div class="author">
                    {{this.author}}
                </div>

                <div class="footer">
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/posts">Back &raquo;</a>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>