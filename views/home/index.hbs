
<section  id="header">
<div class="container headerimage" style="">
    <div class="header-part">
    <div class=" row text-center center-block vertically-center"> 
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">   
            <h2 class="header-title">{{headerTitle}}</h2>
            <h2 class="header-title-white">{{headerSubtitle}}</h2>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="header-description header-desc-max">
                {{headerDescription}}
            </p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  custom-btns">
                <a href="javascript:void(0)"><button class="btn btn-default">{{testButton}}</button></a>
        </div>      
    </div> 
     
</div>
</div>
</section>
<section id="informative-section" >
  {{#if showTitle}}
  <div class="jumbotron"> 
    <h4 class="text-center" >{{message}}</h4>
  </div>
    </div>
  {{/if}}
</section>

<section class="description-part" id="description-id">
    <div class="container align-center">
        <div class="row justify-content-md-center">
            <img src="{{img}}" alt="" width="180" height="180" class="img img-responsive img-thumbnail pull-left" />

            <div class="mbr-white col-md-10">
                <h1 class="mbr-section-title mbr-bold pb-3 mbr-fonts-style display-1">
                    {{aboutMe}}
                </h1>
                
                <p class="mbr-text pb-3 mbr-fonts-style display-5">
                    {{description}}
                </p>
                <div class="mbr-section-btn">
                    <a class="btn btn-md btn-secondary display-4" href="#">{{readMore}}</a>
                    <a class="btn btn-md btn-white-outline display-4" href="/user/login">{{goToLogin}}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="mbr-arrow hidden-sm-down" aria-hidden="true">
        <a href="#next">
            <i class="mbri-down mbr-iconfont"></i>
        </a>
    </div>
</section>